{
  "name": "rise-player-electron",
  "version": "1.0.0",
  "description": "Electron Player",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rise-Vision/rise-player-electron.git"
  },
  "author": "Rise Vision",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "4.1.4",
    "electron-ipc-mock": "0.0.3",
    "electron-mocha": "^5.0.0",
    "fs-extra": "^5.0.0",
    "http-shutdown": "^1.2.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.5",
    "mocha-junit-reporter": "^1.15.0",
    "simple-mock": "^0.8.0",
    "wtfnode": "^0.5.6"
  },
  "dependencies": {
    "common-display-module": "git://github.com/Rise-Vision/common-display-module.git#v3.3.0",
    "electron-proxy-agent": "git://github.com/Rise-Vision/node-electron-proxy-agent.git#8d66",
    "moment-timezone": "^0.5.17",
    "primus": "^6.0.1",
    "rise-cache-v2": "git://github.com/Rise-Vision/rise-cache-v2.git#4879bca",
    "rise-common-electron": "git://github.com/Rise-Vision/rise-common-electron.git#v2.2.8",
    "ws": "^1.1.1"
  },
  "scripts": {
    "jshint": "jshint src",
    "test": "jshint src && istanbul cover node_modules/mocha/bin/_mocha -- --exit --reporter mocha-junit-reporter --reporter-options mochaFile=test/test-results.xml --recursive src/test/unit",
    "test-no-coverage": "jshint src && mocha -t 2000 --exit --recursive src/test/unit",
    "integration": "export ELECTRON_PATH=$PWD/node_modules/.bin/electron && node_modules/.bin/electron-mocha -t 20000 src/test/integration",
    "ci-integration": "xvfb-run node_modules/.bin/electron-mocha --exit -t 20000 src/test/integration",
    "start": "./node_modules/.bin/electron ./src/main/index.js"
  },
  "useElectron": true
}
