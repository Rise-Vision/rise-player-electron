{
  "name": "rise-player-electron",
  "version": "1.0.0",
  "description": "Electron Player",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rise-Vision/rise-player-electron.git"
  },
  "author": "Rise Vision",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "4.2.9",
    "electron-ipc-mock": "0.0.3",
    "electron-mocha": "^8.1.1",
    "fs-extra": "^5.0.0",
    "http-shutdown": "^1.2.0",
    "nyc": "^14.1.1",
    "jshint": "^2.10.2",
    "mocha-junit-reporter": "^1.23.1",
    "simple-mock": "^0.8.0",
    "wtfnode": "^0.5.6"
  },
  "dependencies": {
    "common-display-module": "git://github.com/Rise-Vision/common-display-module.git#v3.3.1",
    "electron-proxy-agent": "git://github.com/Rise-Vision/node-electron-proxy-agent.git#v1.0.3",
    "moment-timezone": "^0.5.17",
    "primus": "^7.3.3",
    "rise-cache-v2": "git://github.com/Rise-Vision/rise-cache-v2.git#4879bca",
    "rise-common-electron": "git://github.com/Rise-Vision/rise-common-electron.git#v2.2.10",
    "ws": "^7.1.2"
  },
  "scripts": {
    "jshint": "jshint src",
    "test": "jshint src && nyc node_modules/mocha/bin/_mocha -- --exit --recursive src/test/unit",
    "test-no-coverage": "jshint src && mocha -t 2000 --exit --recursive src/test/unit",
    "integration": "export ELECTRON_PATH=$PWD/node_modules/.bin/electron && node_modules/.bin/electron-mocha -t 20000 src/test/integration",
    "ci-integration": "xvfb-run node_modules/.bin/electron-mocha --exit -t 20000 src/test/integration",
    "start": "./node_modules/.bin/electron --enable-accelerated-mjpeg-decode --enable-accelerated-video --ignore-gpu-blacklist --enable-native-gpu-memory-buffers --enable-gpu-rasterization ./src/main/index.js"
  },
  "useElectron": true
}
