{
  "name": "rise-player-electron",
  "version": "1.0.0",
  "description": "Electron Player",
  "main": "main.js",
  "author": "Rise Vision",
  "license": "GPLv3",
  "devDependencies": {
    "electron": "1.6.6",
    "electron-ipc-mock": "0.0.3",
    "electron-mocha": "^4.0.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.5",
    "mocha-junit-reporter": "^1.15.0",
    "simple-mock": "^0.8.0"
  },
  "dependencies": {
    "common-display-module": "git://github.com/Rise-Vision/common-display-module.git#v1.3.1",
    "electron-proxy-agent": "git://github.com/Rise-Vision/node-electron-proxy-agent.git#8d66",
    "primus": "^6.0.1",
    "request": "2.73.0",
    "rise-common-electron": "git://github.com/Rise-Vision/rise-common-electron.git#v2.2.1",
    "rise-cache-v2": "git://github.com/Rise-Vision/rise-cache-v2.git#4a60fa0",
    "ws": "^1.1.1"
  },
  "scripts": {
    "test": "jshint src && istanbul cover node_modules/mocha/bin/_mocha -- --reporter mocha-junit-reporter --reporter-options mochaFile=test/test-results.xml --recursive src/test/unit",
    "test-no-coverage": "jshint src && mocha --recursive src/test/unit",
    "integration": "export ELECTRON_PATH=$PWD/node_modules/.bin/electron && node_modules/.bin/electron-mocha -t 10000 src/test/integration",
    "ci-integration": "xvfb-run node_modules/.bin/electron-mocha -t 20000 src/test/integration",
    "start": "./node_modules/.bin/electron ./src/main/index.js"
  },
  "useElectron": true
}
